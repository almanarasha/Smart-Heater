<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUs">
    <include
        layout="@layout/custom_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />
    <TextView
        android:id="@+id/about_us_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/about_us_pargraph"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintVertical_chainStyle="packed"

        />
    <TextView
        android:id="@+id/about_us_pargraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_us_pragraph"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/about_us_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="26sp"
        android:padding="30dp"
        android:textAlignment="center"

        />

    <include
        layout="@layout/home_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>